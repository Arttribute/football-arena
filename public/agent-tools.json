[
  {
    "name": "createGame",
    "description": "Create a new football game instance. You'll be the first player on Team A.",
    "apiSpec": {
      "path": "/api/games/create",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerName"],
      "properties": {
        "playerName": {
          "type": "string",
          "description": "Your name that will appear on your player"
        },
        "config": {
          "type": "object",
          "description": "Optional game configuration",
          "properties": {
            "playersPerTeam": {
              "type": "number",
              "description": "Number of players per team (default: 5)"
            },
            "goalsToWin": {
              "type": "number",
              "description": "Goals needed to win (default: 3)"
            }
          }
        }
      }
    }
  },
  {
    "name": "joinGame",
    "description": "Join an existing game. You'll be assigned to a team and role.",
    "apiSpec": {
      "path": "/api/game/{gameId}/join",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerName"],
      "properties": {
        "playerName": {
          "type": "string",
          "description": "Your name"
        },
        "teamPreference": {
          "type": "string",
          "enum": ["A", "B"],
          "description": "Preferred team (optional, auto-assigned if not specified)"
        },
        "role": {
          "type": "string",
          "enum": ["goalkeeper", "defender", "midfielder", "striker"],
          "description": "Preferred role (optional, auto-assigned if not specified)"
        }
      }
    }
  },
  {
    "name": "getPerception",
    "description": "Get your contextual perception of the game - where you are, where the ball is, teammates, opponents, and strategic recommendations. Use this to decide your next action.",
    "apiSpec": {
      "path": "/api/game/{gameId}/perception?playerId={playerId}",
      "method": "GET",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Accept": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerId"],
      "properties": {
        "playerId": {
          "type": "string",
          "description": "Your player ID"
        }
      }
    }
  },
  {
    "name": "move",
    "description": "Move your player towards a target position on the field.",
    "apiSpec": {
      "path": "/api/game/{gameId}/move",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerId", "targetX", "targetY"],
      "properties": {
        "playerId": {
          "type": "string",
          "description": "Your player ID"
        },
        "targetX": {
          "type": "number",
          "description": "Target X coordinate (0-1200)"
        },
        "targetY": {
          "type": "number",
          "description": "Target Y coordinate (0-800)"
        }
      }
    }
  },
  {
    "name": "pass",
    "description": "Pass the ball to a teammate. You must have possession of the ball.",
    "apiSpec": {
      "path": "/api/game/{gameId}/pass",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerId", "targetPlayerId"],
      "properties": {
        "playerId": {
          "type": "string",
          "description": "Your player ID"
        },
        "targetPlayerId": {
          "type": "string",
          "description": "ID of the teammate to pass to"
        }
      }
    }
  },
  {
    "name": "shoot",
    "description": "Shoot the ball towards the opponent's goal. You must have possession of the ball.",
    "apiSpec": {
      "path": "/api/game/{gameId}/shoot",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerId"],
      "properties": {
        "playerId": {
          "type": "string",
          "description": "Your player ID"
        }
      }
    }
  },
  {
    "name": "tackle",
    "description": "Attempt to tackle an opponent who has the ball. Must be within tackling distance.",
    "apiSpec": {
      "path": "/api/game/{gameId}/tackle",
      "method": "POST",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Content-Type": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": ["playerId", "targetPlayerId"],
      "properties": {
        "playerId": {
          "type": "string",
          "description": "Your player ID"
        },
        "targetPlayerId": {
          "type": "string",
          "description": "ID of the opponent to tackle"
        }
      }
    }
  },
  {
    "name": "getGameState",
    "description": "Get the full current state of the game including all players, ball position, and score.",
    "apiSpec": {
      "path": "/api/game/{gameId}/state",
      "method": "GET",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Accept": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": [],
      "properties": {}
    }
  },
  {
    "name": "listGames",
    "description": "List all active games that you can join or watch.",
    "apiSpec": {
      "path": "/api/games/list",
      "method": "GET",
      "baseUrl": "YOUR_DEPLOYMENT_URL",
      "headers": { "Accept": "application/json" }
    },
    "parameters": {
      "type": "object",
      "required": [],
      "properties": {}
    }
  }
]

